<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="5dip"
    android:orientation="vertical">

    <TextView android:id="@+id/prompt1"
        style="?android:attr/dialogMessage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/title_password1"/>

    <EditText android:id="@+id/password1"
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:inputType="textPassword"/>

    <TextView android:id="@+id/prompt2"
        style="?android:attr/dialogMessage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/title_password2"/>

    <EditText android:id="@+id/password2"
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:inputType="textPassword"/>

</LinearLayout>
